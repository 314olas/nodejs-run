{
    "compilerOptions": {
      "target": "es2017",                          
      "module": "commonjs",                    
      "lib": ["es6"],                    
      "outDir": "dist",
      "strict": true,         
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "moduleResolution": "Node",
      "sourceMap": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }